<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/elementList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/paysage"
    tools:context=".NewCourseIcone">


    <TextView
        android:id="@+id/textNewCourse"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="656dp"
        android:layout_marginEnd="12dp"
        android:text="Nice ride with benou"
        app:layout_constraintEnd_toStartOf="@+id/buttonSelectCourse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/buttonSelectCourse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="50 CHF"
        android:layout_alignRight="@id/elementList"
        android:onClick="purchaseCourse"
        android:background="@drawable/shape_round"
        app:layout_constraintBottom_toBottomOf="@+id/textNewCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textNewCourse"
        android:backgroundTint="@color/button"/>

</androidx.constraintlayout.widget.ConstraintLayout>