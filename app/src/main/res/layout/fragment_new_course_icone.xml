<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/elementList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/paysage"
    tools:context=".NewCourseIcone"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="60dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/textNewCourse"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/buttonSelectCourse"
        android:layout_alignBottom="@id/buttonSelectCourse"
        android:layout_centerVertical="true"
        android:text="20.02.2022"
        android:textAlignment="center"
        android:textSize="30dp"></TextView>

    <Button
        android:id="@+id/buttonSelectCourse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/shape_round"
        android:backgroundTint="@color/button"
        android:onClick="purchaseCourse"
        android:text="50 CHF" />

</RelativeLayout>