<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="135pt"
    android:layout_height="290pt"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/wallpaper"
    android:id="@+id/fragment_Register"
    tools:context=".RegisterFragment">



    <ImageView
        android:id="@+id/logoRegisterPage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/RegisterPage_bottom_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo" />


    <EditText
        android:id="@+id/firstname_register"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logoRegisterPage"
        android:layout_marginBottom="@dimen/RegisterPage_bottom_margin"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:hint="FirstName"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/lastname_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoRegisterPage" />

    <EditText
        android:id="@+id/lastname_register"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/firstname_register"
        android:layout_alignLeft="@id/firstname_register"
        android:layout_alignRight="@id/firstname_register"
        android:layout_marginBottom="@dimen/RegisterPage_bottom_margin"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:hint="LastName"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/npa_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstname_register" />

    <EditText
        android:id="@+id/address_register"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/RegisterPage_bottom_margin"
        android:layout_alignLeft="@id/firstname_register"
        android:layout_below="@id/npa_register"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/email_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/npa_register" />

    <EditText
        android:id="@+id/email_register"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/RegisterPage_bottom_margin"
        android:layout_alignLeft="@id/lastname_register"
        android:layout_below="@id/address_register"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/password_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_register" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/RegisterPage_bottom_margin"
        android:layout_alignRight="@id/lastname_register"
        android:layout_below="@id/email_register"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/confirm_password_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_register" />

    <EditText
        android:id="@+id/confirm_password_register"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:layout_alignLeft="@id/lastname_register"
        android:layout_below="@id/password_register"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_register" />

    <EditText
        android:id="@+id/city_register"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_below="@id/lastname_register"
        android:layout_alignRight="@id/lastname_register"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/npa_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/npa_register" />

    <EditText
        android:id="@+id/npa_register"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@id/lastname_register"
        android:layout_alignLeft="@id/lastname_register"
        android:layout_marginBottom="25dp"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:hint="NPA"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/address_register"
        app:layout_constraintEnd_toStartOf="@+id/city_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastname_register" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/confirm_password_register"
        android:layout_alignLeft="@id/confirm_password_register"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/button"
        android:shadowColor="@android:color/transparent"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_register"
        android:onClick="register"/>

    <Button
        android:id="@+id/backButton_register"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/button_register"
        android:layout_centerHorizontal="true"
        android:onClick="switchFragment"/>

</RelativeLayout>