<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/paysage5"
    tools:context=".Fragments.CourseDisplayFragment">

    <TextView
        android:id="@+id/course_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="LIDDES"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/course_date"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/cancelCourseButton"
        android:layout_alignTop="@id/cancelCourseButton"
        android:gravity="center_horizontal|center_vertical"
        android:text="31/03/2022"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="true"/>


    <Button
        android:id="@+id/cancelCourseButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="125dp"
        android:backgroundTint="@color/buttonRed"
        android:textColor="@color/textColor"
        android:text="@string/action_cancel" />

</RelativeLayout>