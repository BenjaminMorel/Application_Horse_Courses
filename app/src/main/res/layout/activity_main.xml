<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="125pt"
    android:layout_height="250pt"
    android:layout_gravity="center"
    android:background="@color/background"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/email_login"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20pt"
        android:background="@color/text_edit"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="6pt" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_below="@id/email_login"
        android:layout_alignLeft="@id/email_login"
        android:layout_alignRight="@id/email_login"
        android:background="@color/text_edit"
        android:ems="10"
        android:textSize="6pt"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/buttonSignin"
        android:layout_width="128dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button"
        android:layout_below="@id/password_login"
        android:layout_alignLeft="@id/imageUser"
        android:layout_alignRight="@id/email_login"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="0dp"
        android:onClick="logIn"
        android:text="Sign in"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="316dp" />

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="128dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button"
        android:layout_below="@id/buttonSignin"
        android:layout_alignLeft="@id/imageUser"
        android:layout_alignRight="@id/email_login"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-1dp"
        android:onClick="loadRegisterPage"
        android:text="Sign up"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="382dp" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="41dp"
        android:layout_height="47dp"
        android:layout_marginLeft="12pt"
        android:layout_alignTop="@id/password_login"
        android:layout_alignBottom="@id/password_login"
        app:srcCompat="@drawable/lock"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="199dp"
        android:background="@color/text_edit"/>

    <ImageView
        android:id="@+id/imageLock"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@id/imageUser"
        android:layout_alignTop="@id/email_login"
        android:layout_alignBottom="@id/email_login"
        app:srcCompat="@drawable/user"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="109dp"
        android:background="@color/text_edit"/>

</RelativeLayout>