<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="135pt"
    android:layout_height="290pt"
    android:layout_gravity="center"
    android:background="@drawable/wallpaper"
    tools:context=".Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AppTitle"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:fontFamily="serif-monospace"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="20pt"
        android:background="@drawable/shape_mail"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/email"
        android:textColorHint="@color/white"
        android:textColorHighlight="@color/white"
        android:inputType="textEmailAddress"
        android:textSize="7pt"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/password_login"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_below="@id/email_login"
        android:layout_alignLeft="@id/email_login"
        android:layout_alignRight="@id/email_login"
        android:background="@drawable/shape_mail"
        android:ems="10"
        android:textSize="7pt"
        android:textStyle="bold"
        android:hint="@string/password"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:textColorHint="@color/white"
        android:textColorHighlight="@color/white"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button2"
        android:layout_below="@id/password_login"
        android:layout_alignLeft="@id/password_login"
        android:layout_alignRight="@id/password_login"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="0dp"
        android:text="@string/sign_in"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="316dp" />

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="128dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLogin"
        android:layout_alignRight="@id/buttonLogin"
        android:layout_alignLeft="@id/buttonLogin"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:backgroundTint="@color/button"
        android:shadowColor="@android:color/transparent"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="382dp" />
</RelativeLayout>